{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"plugins": ["mocha"],
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"globals": {
        "artifacts": false,
        "contract": false,
        "assert": false
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": ["off", "windows"],
		"quotes": ["off", "single"],
		"semi": ["error", "always"],
		"no-global-assign": ["error", { "exceptions": ["Object"] }],
		"no-console": 0,
		"react/prop-types": 0,
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "should|expect"
			}
		]
	}
}
